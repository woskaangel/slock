<resources>

    <!-- 상태바 & 액션바 숨기기 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
<!--        <item name="android:windowFullscreen">true</item>--> <!-- 상태바 숨기기 : 적용시 adjustResize 속성이 적용되지 않음 -->

        <!-- EditText -->
        <item name="colorAccent">@color/mainPurpleOpacity</item> <!--  colorAccent: 커서색, 드래그 시 하이라이트 색, eidtText선택 시 밑줄 하이라이트 색 등 강조 색을 변경 -->
        <item name="colorControlNormal">@color/mainPurple</item> <!-- 하이라이트 되지 않았을 때 밑줄 색 -->

        <!-- 기본 setting -->
        <item name="android:switchStyle">@style/SwitchStyle</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="checkboxStyle">@style/CheckboxStyle</item>
        <item name="imageButtonStyle">@style/ImageButtonStyle</item>
    </style>

    <!-- splash -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="SwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch" >
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="android:track">@drawable/switch_track_selector</item>
        <item name="android:textOn">""</item>
        <item name="android:textOff">""</item>
    </style>

    <style name="TextViewStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textSize">@dimen/editF</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="CheckboxStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_custom</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/iCheckF</item>
    </style>

    <style name="ImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@color/invisible</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="SignBtnStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/btnF</item>
        <item name="android:background">@color/invisible</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ContinueBtnStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:background">@drawable/button2_background</item>
        <item name="android:textSize">@dimen/btnF</item>
        <item name="android:textColor">@color/mainPurple</item>
        <item name="android:layout_marginLeft">@dimen/MRL</item>
        <item name="android:layout_marginRight">@dimen/MRL</item>
    </style>

    <style name="ContentStyle">
        <item name="android:background">@drawable/content_background</item>
        <item name="android:elevation">2dp</item>
        <item name="android:layout_marginLeft">@dimen/MRL</item>
        <item name="android:layout_marginRight">@dimen/MRL</item>
        <item name="android:padding">@dimen/P</item>
    </style>

    <style name="WarnTextStyle">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/warningF</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="ContentTitleStyle">
        <item name="android:textSize">@dimen/mF</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:layout_marginLeft">@dimen/mM</item>
    </style>

    <style name="MyPageEditStyle">
        <item name="android:layout_marginLeft">@dimen/myMRL</item>
        <item name="android:layout_marginRight">@dimen/myMRL</item>
        <item name="android:inputType">textPassword</item>
    </style>

</resources>